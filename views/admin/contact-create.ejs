<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <form method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="row mb-3">
                        <label for="platform" class="col-sm-2 col-form-label">Platform</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="platform" name="platform">
                        </div><br><br>
                        <div class="row mb-3">
                            <label for="platformlink" class="col-sm-2 col-form-label">Platform Link</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="platformlink" name="platformlink">
                        </div>
                        </div>
                        
                        <div class="row mb-3">
                            <label for="resim" class="col-sm-2 col-form-label">Resim</label>
                            <div class="col-sm-8">
                                <input type="file" class="form-control" id="resim" name="resim">
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
       
</body>
</html>



