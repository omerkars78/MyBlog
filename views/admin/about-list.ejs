<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
          <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action != "undefined" && action=="edit") { %>
                    <div class="alert alert-success">
                        <%= aboutid %> id numaralı abot Güncelledi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="create") { %>
                    <div class="alert alert-success">
                        About Eklendi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="delete") { %>
                    <div class="alert alert-success">
                       About Silindi.
                    </div>
                <% } %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th>title</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% abouts.forEach(about => { %>
                            <tr>
                                <td>#<%= about.dataValues.id %> </td>
                                <td>
                                    <%= about.dataValues.title %> 
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/abouts/<%= about.dataValues.id %>">edit</a>
                                    <a class="btn btn-sm btn-danger" href="/admin/about/delete/<%= about.dataValues.id %>">delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
          </div>
    </div>
</body>
</html>



